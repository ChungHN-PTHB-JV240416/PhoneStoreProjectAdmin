@model IEnumerable<PhoneStore_New.Models.Contact>
@{
    ViewBag.Title = "Hòm thư Hỗ trợ";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <h2 class="page-header">Danh sách Yêu cầu Hỗ trợ</h2>
    </div>
</div>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}

<div class="panel panel-default">
    <div class="panel-heading">Tin nhắn từ khách hàng</div>
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover" id="dataTables-contact">
                <thead>
                    <tr>
                        <th width="5%">TT</th>
                        <th width="15%">Ngày gửi</th>
                        <th width="20%">Họ tên</th>
                        <th>Nội dung</th>
                        <th width="15%">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="@(item.IsRead ? "" : "warning")" style="@(item.IsRead ? "" : "font-weight:bold")">
                            <td class="text-center">
                                @if (item.Status == 0)
                                {
                                    <span class="label label-warning">Chờ xử lý</span>
                                }
                                else if (item.Status == 1)
                                {
                                    @* Đổi màu xanh lá cho "Đã trả lời" *@
                                    <span class="label label-success">Đã trả lời</span>
                                }
                                else
                                {
                                    <span class="label label-default">Đã đóng</span>
                                }
                            </td>
                            <td>@(item.CreatedAt.HasValue ? item.CreatedAt.Value.ToString("dd/MM/yyyy HH:mm") : "")</td>
                            <td>
                                @item.FullName <br />
                                <small>@item.Email</small>
                            </td>
                            <td>
                                @if (item.Message.Length > 40)
                                {@item.Message.Substring(0, 40) <span>...</span> }
                            else
                            { @item.Message}
                            </td>
                            <td class="text-center">
                                @* --- NÚT XEM CHI TIẾT & TRẢ LỜI (MỚI) --- *@
                                <a href="@Url.Action("Detail", new { id = item.Id })" class="btn btn-primary btn-xs">
                                    <i class="fa fa-reply"></i> Trả lời
                                </a>

                                <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger btn-xs" onclick="return confirm('Xóa tin nhắn này?');">
                                    <i class="fa fa-trash"></i> Xóa
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>