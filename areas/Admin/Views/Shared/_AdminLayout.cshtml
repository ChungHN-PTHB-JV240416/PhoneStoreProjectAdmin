<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Quản Trị Hệ Thống</title>

    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <script src="@Url.Content("~/Scripts/modernizr-2.8.3.js")"></script>

    <style>
        body { font-family: 'Segoe UI', sans-serif; background-color: #f4f6f9; overflow-x: hidden; }

        /* Sidebar Styling */
        .sidebar {
            width: 250px;
            background: #343a40;
            color: #fff;
            position: fixed;
            top: 0; left: 0; bottom: 0;
            overflow-y: auto;
            z-index: 1000;
            transition: all 0.3s;
            box-shadow: 2px 0 5px rgba(0,0,0,0.1);
        }
        .sidebar-header { padding: 20px; text-align: center; background: #212529; border-bottom: 1px solid #4b545c; }
        .sidebar-header h3 { margin: 0; font-size: 20px; font-weight: bold; color: #fff; display: block; text-decoration: none; }
        .sidebar-header a { color: white; text-decoration: none; }

        .sidebar-menu { padding: 0; list-style: none; margin-top: 10px; }
        .sidebar-menu li a {
            display: block;
            padding: 12px 20px;
            color: #c2c7d0;
            text-decoration: none;
            border-bottom: 1px solid rgba(255,255,255,0.05);
            transition: 0.2s;
            font-size: 15px;
        }
        .sidebar-menu li a:hover, .sidebar-menu li a.active {
            background-color: #007bff;
            color: #fff;
            padding-left: 25px;
        }
        .sidebar-menu i { margin-right: 10px; width: 25px; text-align: center; }

        /* Footer Logout */
        .sidebar-footer {
            padding: 15px;
            border-top: 1px solid #4b545c;
            background: #212529;
            position: absolute;
            bottom: 0;
            width: 100%;
        }

        /* Main Content */
        .main-content {
            margin-left: 250px;
            padding: 20px;
            min-height: 100vh;
            transition: all 0.3s;
        }

        /* Mobile Toggle Button */
        .btn-toggle-sidebar {
            display: none;
            background: #343a40;
            color: white;
            border: none;
            padding: 10px 15px;
            border-radius: 4px;
            margin-bottom: 15px;
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .sidebar { margin-left: -250px; }
            .sidebar.active { margin-left: 0; }
            .main-content { margin-left: 0; }
            .sidebar-overlay {
                display: none;
                position: fixed; top: 0; left: 0; right: 0; bottom: 0;
                background: rgba(0,0,0,0.5); z-index: 999;
            }
            .sidebar-overlay.active { display: block; }
            .btn-toggle-sidebar { display: inline-block; }
        }
    </style>
</head>
<body>

    <div id="sidebarOverlay" class="sidebar-overlay"></div>

    <div class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <a href="@Url.Action("Index", "Admin", new { area = "Admin" })">
                <h3>CHUNG PHONE</h3>
                <small>Admin Panel</small>
            </a>
        </div>

        <ul class="sidebar-menu">
            <li>
                <a href="@Url.Action("Index", "Admin", new { area = "Admin" })">
                    <i class="fa fa-dashboard"></i> Dashboard
                </a>
            </li>

            <li>
                <a href="@Url.Action("Index", "Home", new { area = "" })" target="_blank">
                    <i class="fa fa-globe"></i> Xem Website
                </a>
            </li>

            <li>
                <a href="@Url.Action("Users", "Admin", new { area = "Admin" })">
                    <i class="fa fa-users"></i> Người dùng
                </a>
            </li>

            <li><a href="@Url.Action("Products", "ProductAdmin", new { area = "Admin" })"><i class="fa fa-mobile" style="font-size: 20px;"></i> Sản phẩm</a></li>
            <li><a href="@Url.Action("Index", "OrderAdmin", new { area = "Admin" })"><i class="fa fa-shopping-cart"></i> Đơn hàng</a></li>
            <li><a href="@Url.Action("Index", "Supplier", new { area = "Admin" })"><i class="fa fa-truck"></i> Nhà cung cấp</a></li>
            <li><a href="@Url.Action("Index", "VoucherAdmin", new { area = "Admin" })"><i class="fa fa-ticket"></i> Voucher</a></li>
            <li><a href="@Url.Action("Index", "BannerAdmin", new { area = "Admin" })"><i class="fa fa-image"></i> Banner</a></li>
            <li><a href="@Url.Action("Index", "Setting", new { area = "Admin" })"><i class="fa fa-cogs"></i> Cấu hình</a></li>
        </ul>

        <div class="sidebar-footer">
            @using (Html.BeginForm("Logout", "Login", new { area = "" }, FormMethod.Post, new { id = "logoutFormAdmin" }))
            {
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-danger btn-block"><i class="fa fa-sign-out"></i> Đăng xuất</button>
            }
        </div>
    </div>

    <div class="main-content">
        <button class="btn-toggle-sidebar" id="sidebarToggle">
            <i class="fa fa-bars"></i> Menu
        </button>

        @* Bỏ class admin-card để tránh bị double khung trắng với các View con *@
        <div>
            @RenderBody()
        </div>
    </div>

    <script src="@Url.Content("~/Scripts/jquery-1.10.2.min.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.min.js")"></script>

    <script>
        // Script xử lý Toggle Menu trên Mobile
        $(document).ready(function () {
            $('#sidebarToggle, #sidebarOverlay').click(function () {
                $('#sidebar').toggleClass('active');
                $('#sidebarOverlay').toggleClass('active');
            });
        });
    </script>

    @RenderSection("scripts", required: false)
</body>
</html>