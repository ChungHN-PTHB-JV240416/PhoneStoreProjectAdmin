@model PhoneStore_New.Areas.Admin.Models.ViewModels.BestsellerReportViewModel
@{
    ViewBag.Title = "Báo cáo Sản phẩm Bán chạy";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .admin-container h1 {
        text-align: center;
        color: #34495e;
        margin-bottom: 25px;
    }

    .bestseller-table th {
        background-color: #2c3e50;
        color: white;
    }

    .rank-cell {
        font-weight: bold;
        font-size: 1.1em;
    }
</style>

<div class="admin-container">
    <h2>Top 10 Sản phẩm Bán chạy nhất</h2>

    @if (Model.Bestsellers != null && Model.Bestsellers.Any())
    {
        <table class="table table-bordered table-striped bestseller-table">
            <thead>
                <tr>
                    <th style="width: 10%;">Hạng</th>
                    <th>ID Sản phẩm</th>
                    <th>Tên Sản phẩm</th>
                    <th style="width: 20%;">Số lượng đã bán</th>
                </tr>
            </thead>
            <tbody>
                @{ int rank = 1; }
                @foreach (var item in Model.Bestsellers)
                {
                    <tr>
                        <td class="rank-cell">@rank</td>
                        <td>@item.ProductId</td>
                        <td>@item.ProductName</td>
                        <td>@item.TotalSold</td>
                    </tr>
                    rank++;
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="alert alert-info text-center">Không có dữ liệu sản phẩm bán chạy.</p>
    }
</div>