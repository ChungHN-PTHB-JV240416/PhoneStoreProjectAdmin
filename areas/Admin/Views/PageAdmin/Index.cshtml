@model IEnumerable<PhoneStore_New.Areas.Admin.Models.ViewModels.PageViewModel>

@{
    ViewBag.Title = "Quản lý Trang (Nội dung)";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .status-published {
        color: green;
        font-weight: bold;
    }

    .status-draft {
        color: #888;
        font-weight: bold;
    }
</style>

<div class="admin-container">
    <h2>Quản lý Trang (Nội dung)</h2>

    <p style="margin-bottom: 20px;">
        @Html.ActionLink("Tạo Trang Mới", "Create", null, new { @class = "btn btn-success" })
    </p>

    @if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        <div class="alert alert-info">@ViewBag.Message</div>
    }

    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Title)
                    </th>
                    <th>
                        Đường dẫn (Slug)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsPublished)
                    </th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @* Click vào tên sẽ dẫn đến trang Sửa *@
                            @Html.ActionLink(item.Title, "Edit", new { id = item.PageId })
                        </td>
                        <td>
                            /pages/@Html.DisplayFor(modelItem => item.Slug)
                        </td>
                        <td>
                            @if (item.IsPublished)
                            {
                                <span class="status-published">Đang hiển thị</span>
                            }
                            else
                            {
                                <span class="status-draft">Đã ẩn</span>
                            }
                        </td>
                        <td class="action-links" style="min-width: 100px;">
                            @Html.ActionLink("Sửa", "Edit", new { id = item.PageId }, new { @class = "btn btn-warning btn-xs" })

                            @using (Html.BeginForm("Delete", "PageAdmin", new { id = item.PageId }, FormMethod.Post, new { @style = "display:inline;" }))
                            {
                                @Html.AntiForgeryToken()
                                <button type.submit" class="btn btn-danger btn-xs" onclick="return confirm('Bạn có chắc chắn muốn xóa trang này?');">
                                    Xóa
                                </button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>