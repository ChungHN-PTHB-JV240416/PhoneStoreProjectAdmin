@model IEnumerable<PhoneStore_New.Models.Product>
@{ Layout = "~/Views/Shared/_Layout.cshtml"; }

<style>
    .gallery-grid {
        display: flex;
        flex-wrap: wrap;
        margin: 0 -10px;
    }

    .gallery-item {
        width: 33.33%;
        padding: 10px;
        position: relative;
        overflow: hidden;
    }

    .gallery-card {
        border-radius: 15px;
        overflow: hidden;
        position: relative;
        height: 350px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    }

        .gallery-card img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.5s ease;
        }

        .gallery-card:hover img {
            transform: scale(1.1);
        }

    /* Hiệu ứng mờ đen khi hover */
    .gallery-overlay {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        top: 0;
        background: rgba(0,0,0,0.4);
        opacity: 0;
        transition: opacity 0.3s;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        color: white;
    }

    .gallery-card:hover .gallery-overlay {
        opacity: 1;
    }

    .gallery-title {
        font-size: 20px;
        font-weight: bold;
        transform: translateY(20px);
        transition: transform 0.4s;
    }

    .gallery-card:hover .gallery-title {
        transform: translateY(0);
    }

    .gallery-btn {
        margin-top: 15px;
        background: white;
        color: black;
        padding: 10px 25px;
        border-radius: 20px;
        text-decoration: none;
        font-weight: bold;
        transform: translateY(20px);
        transition: transform 0.4s 0.1s;
    }

    .gallery-card:hover .gallery-btn {
        transform: translateY(0);
    }

    .gallery-btn:hover {
        background: #eee;
        text-decoration: none;
        color: black;
    }
</style>

<div class="container">
    <h2 class="text-center" style="margin-bottom: 40px; font-weight: 300; letter-spacing: 2px;">LOOKBOOK / @ViewBag.Title.ToUpper()</h2>

    <div class="gallery-grid">
        @foreach (var item in Model)
        {
            <div class="gallery-item">
                <div class="gallery-card">
                    <img src="@Url.Content(item.ImageUrl ?? "~/Content/images/no-image.png")" />
                    <div class="gallery-overlay">
                        <div class="gallery-title">@item.Name</div>
                        <a href="@Url.Action("Detail", "Product", new { id = item.ProductId })" class="gallery-btn">KHÁM PHÁ</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>