@model PhoneStore_New.Models.User
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Hồ sơ cá nhân";
}

@section styles {
    <style>
        body {
            background-color: #f5f5fa;
        }

        .container {
            width: 98%;
            max-width: 1400px;
        }

        .profile-container {
            max-width: 800px;
            margin: 40px auto;
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.05);
            overflow: hidden;
        }

        .profile-header {
            background: linear-gradient(135deg, #333 0%, #000 100%);
            color: #fff;
            padding: 40px 20px;
            text-align: center;
        }

        .avatar-wrap {
            width: 120px;
            height: 120px;
            margin: 0 auto 15px;
            position: relative;
        }

        .profile-avatar {
            width: 100%;
            height: 100%;
            border-radius: 50%;
            object-fit: cover;
            border: 4px solid rgba(255,255,255,0.3);
            background: #fff;
        }

        .profile-name {
            font-size: 24px;
            font-weight: 700;
            margin: 0;
        }

        .profile-joined {
            font-size: 13px;
            opacity: 0.7;
            margin-top: 5px;
        }

        .profile-body {
            padding: 40px;
        }

        .form-group label {
            font-weight: 600;
            color: #555;
            margin-bottom: 8px;
        }

        .form-control-custom {
            width: 100%;
            padding: 12px 15px;
            border: 1px solid #ddd;
            border-radius: 6px;
            transition: 0.3s;
            outline: none;
        }

            .form-control-custom:focus {
                border-color: #d0011b;
                box-shadow: 0 0 0 3px rgba(208, 1, 27, 0.1);
            }

            .form-control-custom[readonly] {
                background-color: #f9f9f9;
                color: #888;
                cursor: not-allowed;
            }

        .btn-update {
            background: #d0011b;
            color: #fff;
            border: none;
            padding: 12px 0;
            width: 100%;
            border-radius: 6px;
            font-weight: 700;
            text-transform: uppercase;
            font-size: 15px;
            margin-top: 20px;
            transition: 0.3s;
        }

            .btn-update:hover {
                background: #b00118;
                box-shadow: 0 4px 10px rgba(208, 1, 27, 0.3);
            }

        .alert-custom {
            padding: 15px;
            border-radius: 6px;
            margin-bottom: 20px;
            font-weight: 600;
            text-align: center;
        }

        .alert-success-custom {
            background: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }
    </style>
}

<div class="container">
    <div class="profile-container">
        <div class="profile-header">
            <div class="avatar-wrap">
                <img src="@Url.Content(Model.AvatarUrl ?? "~/Content/images/default-user.png")" class="profile-avatar" />
            </div>
            <h3 class="profile-name">@Model.Username</h3>

            @* --- ĐÃ SỬA DÒNG NÀY: Bỏ .HasValue và .Value --- *@
            <div class="profile-joined">Thành viên từ: @Model.CreatedAt.ToString("dd/MM/yyyy")</div>
        </div>

        <div class="profile-body">
            @if (TempData["Message"] != null)
            {
                <div class="alert-custom alert-success-custom">
                    <i class="glyphicon glyphicon-ok-circle"></i> @TempData["Message"]
                </div>
            }

            @using (Html.BeginForm("UpdateProfile", "Collection", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Họ (First Name)</label>
                            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control-custom", placeholder = "Nhập họ..." })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Tên (Last Name)</label>
                            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control-custom", placeholder = "Nhập tên..." })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label>Email (Tài khoản đăng nhập)</label>
                    <input type="text" value="@Model.Email" class="form-control-custom" readonly />
                    <small class="text-muted"><i class="glyphicon glyphicon-lock"></i> Email không thể thay đổi.</small>
                </div>

                <div class="form-group">
                    <label>Số điện thoại</label>
                    @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control-custom", placeholder = "Nhập số điện thoại..." })
                </div>

                <div class="form-group">
                    <label>Địa chỉ giao hàng mặc định</label>
                    @Html.TextAreaFor(m => m.Address, new { @class = "form-control-custom", rows = "3", placeholder = "Nhập địa chỉ..." })
                </div>

                <button type="submit" class="btn-update">
                    <i class="glyphicon glyphicon-floppy-disk"></i> Lưu thay đổi
                </button>
            }
        </div>
    </div>
</div>