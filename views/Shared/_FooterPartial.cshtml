    @model PhoneStore_New.Models.ViewModels.FooterViewModel
    @* Dùng @Url.Content để đảm bảo đường dẫn tài nguyên tĩnh đúng nếu có *@

    @* Đây là nơi chứa toàn bộ mã HTML/CSS của Footer (Tương đương với nội dung file footer.php của bạn) *@

    <footer class="site-footer">
        <div class="footer-content">
            <div class="footer-section about">
                <h3>Về ChungPhone</h3>
                @* Dùng @Html.Raw nếu bạn có thể lưu HTML trong trường footer_text *@
                <p>@Html.Raw(Model.FooterText ?? "Chuyên cung cấp các sản phẩm điện thoại di động...")</p>
            </div>
            <div class="footer-section contact">
                <h3>Liên hệ</h3>
                <p><strong>Địa chỉ:</strong> @(Model.FooterAddress ?? "123 Đường ABC, Hà Nội, Việt Nam")</p>
                <p><strong>Điện thoại:</strong> @(Model.FooterPhone ?? "(+84) 123 456 789")</p>
            </div>
        </div>
        <div class="footer-bottom">
            <p>Bản quyền &copy; @DateTime.Now.Year Cửa hàng ChungPhone. Mọi quyền được bảo lưu.</p>
        </div>
    </footer>