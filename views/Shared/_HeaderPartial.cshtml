@using PhoneStore_New.Models.ViewModels
@using PhoneStore_New.Models
@model HeaderViewModel

@* === GIỮ NGUYÊN HELPER VẼ MENU CỦA BẠN === *@
@helper RenderMenu(List<NavbarItem> allItems, int? parentId)
{
    if (allItems == null) { return; }
    var children = allItems.Where(i => i.ParentId == parentId).OrderBy(i => i.ItemOrder).ToList();
    if (children.Any())
    {
        if (parentId.HasValue)
        {
            <ul class="dropdown-menu" role="menu">
                @foreach (var item in children)
                {
                    bool hasChildren = allItems.Any(i => i.ParentId == item.ItemId);
                    if (hasChildren)
                    {
                        <li class="dropdown-submenu">
                            <a href="@Url.Content(item.ItemUrl ?? "#")" class="dropdown-toggle" data-toggle="dropdown">@item.ItemText</a>
                            @RenderMenu(allItems, item.ItemId)
                        </li>
                    }
                    else
                    {
                        <li><a href="@Url.Content(item.ItemUrl ?? "#")">@item.ItemText</a></li>
                    }
                }
            </ul>
        }
        else
        {
            <ul class="nav navbar-nav">
                @foreach (var item in children)
                {
                    bool hasChildren = allItems.Any(i => i.ParentId == item.ItemId);
                    if (hasChildren)
                    {
                        <li class="dropdown">
                            <a href="@Url.Content(item.ItemUrl ?? "#")" class="dropdown-toggle" data-toggle="dropdown">@item.ItemText <span class="caret"></span></a>
                            @RenderMenu(allItems, item.ItemId)
                        </li>
                    }
                    else
                    {
                        <li><a href="@Url.Content(item.ItemUrl ?? "#")">@item.ItemText</a></li>
                    }
                }
            </ul>
        }
    }
}

<style>
    /* === GIỮ NGUYÊN CSS CỦA BẠN === */
    .navbar-custom {
        background-color: #fff;
        border: none;
        border-bottom: 1px solid #e5e5e5;
        margin-bottom: 0;
        box-shadow: 0 2px 5px rgba(0,0,0,0.03);
    }

    .header-container {
        width: 98%;
        max-width: 1400px;
        margin: 0 auto;
        padding-left: 15px;
        padding-right: 15px;
    }

    .navbar-brand-text {
        font-size: 24px;
        font-weight: 800;
        color: #d0011b !important;
        text-transform: uppercase;
        padding-top: 15px;
        letter-spacing: 1px;
    }

    .navbar-nav > li > a {
        color: #333 !important;
        font-weight: 600;
        font-size: 14px;
        padding-top: 20px;
        padding-bottom: 20px;
        text-transform: uppercase;
    }

        .navbar-nav > li > a:hover, .navbar-nav > li > a:focus, .navbar-nav > .open > a, .navbar-nav > .open > a:hover {
            background-color: transparent !important;
            color: #d0011b !important;
        }

    .dropdown-submenu {
        position: relative;
    }

        .dropdown-submenu > .dropdown-menu {
            top: 0;
            left: 100%;
            margin-top: -6px;
            margin-left: -1px;
            border-radius: 0;
        }

        .dropdown-submenu:hover > .dropdown-menu {
            display: block;
        }

        .dropdown-submenu > a:after {
            display: block;
            content: " ";
            float: right;
            width: 0;
            height: 0;
            border-color: transparent;
            border-style: solid;
            border-width: 5px 0 5px 5px;
            border-left-color: #ccc;
            margin-top: 5px;
            margin-right: -10px;
        }

        .dropdown-submenu:hover > a:after {
            border-left-color: #d0011b;
        }

    .navbar-form {
        padding-top: 5px;
    }

        .navbar-form .form-control {
            border-radius: 20px 0 0 20px;
            border: 1px solid #ddd;
            box-shadow: none;
            width: 250px;
        }

        .navbar-form .btn-search {
            border-radius: 0 20px 20px 0;
            background-color: #d0011b;
            color: #fff;
            border: 1px solid #d0011b;
        }

            .navbar-form .btn-search:hover {
                background-color: #b00118;
                color: #fff;
            }

    .cart-wrapper {
        position: relative;
        padding: 18px 15px !important;
        display: flex;
        align-items: center;
        height: 60px;
    }

    .icon-cart-svg {
        width: 24px;
        height: 24px;
        fill: #333;
        transition: fill 0.2s;
    }

    .cart-wrapper:hover .icon-cart-svg {
        fill: #d0011b;
    }

    .cart-badge {
        position: absolute;
        top: 12px;
        right: 5px;
        background-color: #d0011b;
        color: white;
        font-size: 10px;
        font-weight: 700;
        padding: 1px 5px;
        border-radius: 10px;
        border: 2px solid #fff;
        min-width: 18px;
        text-align: center;
        box-shadow: 0 1px 2px rgba(0,0,0,0.2);
    }

    .navbar-avatar {
        width: 30px;
        height: 30px;
        border-radius: 50%;
        object-fit: cover;
        margin-right: 8px;
        margin-top: -5px;
        border: 1px solid #eee;
    }

    .notify-badge {
        background-color: #d0011b;
        color: white;
        font-size: 10px;
        font-weight: bold;
        padding: 2px 6px;
        border-radius: 10px;
        margin-left: 5px;
        position: relative;
        top: -10px;
        box-shadow: 0 1px 2px rgba(0,0,0,0.2);
    }

    .dropdown-menu > li > a {
        position: relative;
        padding-right: 60px;
    }

    .badge-absolute {
        background-color: #d0011b !important;
        color: #fff;
        position: absolute;
        top: 6px;
        right: 15px;
        font-size: 10px;
        padding: 3px 8px;
        border-radius: 10px;
        font-weight: bold;
    }
</style>

<div class="navbar navbar-default navbar-custom navbar-static-top">
    <div class="header-container">

        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse-main">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
            </button>

            @if (string.IsNullOrEmpty(Model.LogoUrl))
            {
                <a class="navbar-brand navbar-brand-text" href="@Url.Action("Index", "Home")">Phone Store</a>
            }
            else
            {
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                    <img src="@Url.Content(Model.LogoUrl)" alt="Logo" height="40" style="display:inline-block; margin-top:-10px;">
                </a>
            }
        </div>

        <div class="collapse navbar-collapse" id="navbar-collapse-main">
            @* 1. MENU CHÍNH *@
            @RenderMenu(Model.NavbarItems ?? new List<NavbarItem>(), null)

            @* 2. KHU VỰC BÊN PHẢI *@
            <ul class="nav navbar-nav navbar-right">

                @if (Model.ShowSearchBar)
                {
                    <li>
                        @using (Html.BeginForm("Search", "Product", FormMethod.Get, new { @class = "navbar-form", @role = "search" }))
                        {
                            <div class="input-group">
                                <input type="text" name="keyword" class="form-control" placeholder="Bạn tìm gì...">
                                <span class="input-group-btn">
                                    <button type="submit" class="btn btn-search"><span class="glyphicon glyphicon-search"></span></button>
                                </span>
                            </div>
                        }
                    </li>
                }

                @* GIỎ HÀNG *@
                <li>
                    <a href="@Url.Action("Index", "Cart")" class="cart-wrapper" title="Xem giỏ hàng">
                        <svg class="icon-cart-svg" viewBox="0 0 24 24">
                            <path d="M7 18c-1.1 0-1.99.9-1.99 2S5.9 22 7 22s2-.9 2-2-.9-2-2-2zM1 2v2h2l3.6 7.59-1.35 2.45c-.16.28-.25.61-.25.96 0 1.1.9 2 2 2h12v-2H7.42c-.14 0-.25-.11-.25-.25l.03-.12.9-1.63h7.45c.75 0 1.41-.41 1.75-1.03l3.58-6.49c.08-.14.12-.31.12-.48 0-.55-.45-1-1-1H5.21l-.94-2H1zm16 16c-1.1 0-1.99.9-1.99 2s.89 2 1.99 2 2-.9 2-2-.9-2-2-2z" />
                        </svg>
                        @{
                            var cart = Session["Cart"] as List<PhoneStore_New.Models.ViewModels.CartItem>;
                            int count = cart != null ? cart.Sum(c => c.Quantity) : 0;
                        }
                        @if (count > 0)
                        {
                            <span class="cart-badge">@count</span>
                        }
                    </a>
                </li>

                @* TÀI KHOẢN & THÔNG BÁO *@
                @if (Model.IsLoggedIn)
                {
                    // === LOGIC CŨ CỦA BẠN: GỌI DB TRỰC TIẾP TẠI VIEW ===
                    int replyCount = 0;
                    if (Session["UserId"] != null)
                    {
                        using (var dbTemp = new PhoneStoreDBEntities())
                        {
                            int uid = (int)Session["UserId"];
                            replyCount = dbTemp.Contacts.Count(c => c.UserId == uid && c.Status == 1);
                        }
                    }
                    // =================================================

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" style="display:flex; align-items:center;">
                            @* --- FIX LỖI: HIỂN THỊ ẢNH AVATAR --- *@
                            @if (!string.IsNullOrEmpty(Model.UserAvatarUrl))
                            {
                                <img src="@Url.Content(Model.UserAvatarUrl)" class="navbar-avatar" />
                            }
                            else
                            {
                                <span class="glyphicon glyphicon-user" style="margin-right: 5px;"></span>
                            }

                            @Model.UserFirstName <span class="caret"></span>

                            @if (replyCount > 0)
                            {
                                <span class="notify-badge">@replyCount</span>
                            }
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Action("Index", "Profile")"><i class="glyphicon glyphicon-user"></i> Hồ sơ cá nhân</a></li>

                            <li>
                                <a href="@Url.Action("MyTickets", "Profile")">
                                    <i class="glyphicon glyphicon-envelope"></i> Hộp thư hỗ trợ
                                    @if (replyCount > 0)
                                    {
                                        <span class="badge-absolute">@replyCount mới</span>
                                    }
                                </a>
                            </li>

                            <li><a href="@Url.Action("History", "Order")"><i class="glyphicon glyphicon-list-alt"></i> Đơn hàng của tôi</a></li>

                            @if (User.IsInRole("admin"))
                            {
                                <li class="divider"></li>
                                <li><a href="@Url.Action("Index", "Admin", new { area = "Admin" })"><i class="glyphicon glyphicon-cog"></i> Quản trị hệ thống</a></li>
                            }
                            <li class="divider"></li>
                            <li>
                                @* FORM LOGOUT CHUẨN ID *@
                                <a href="javascript:document.getElementById('logoutFormHeader').submit()">
                                    <i class="glyphicon glyphicon-log-out"></i> Đăng xuất
                                </a>
                            </li>
                        </ul>
                    </li>
                }
                else
                {
                    @* --- FIX LỖI: THÊM AREA="" ĐỂ LINK KHÔNG BỊ CHẾT --- *@
                    <li><a href="@Url.Action("Index", "Login", new { area = "" })">Đăng nhập</a></li>
                    <li><a href="@Url.Action("Register", "Login", new { area = "" })">Đăng ký</a></li>
                }
            </ul>
        </div>
    </div>
</div>

@* FORM LOGOUT *@
@using (Html.BeginForm("Logout", "Login", new { area = "" }, FormMethod.Post, new { id = "logoutFormHeader" }))
{
    @Html.AntiForgeryToken()
}