@using PhoneStore_New.Models.ViewModels
@using PhoneStore_New.Models; @* <-- THÊM DÒNG NÀY ĐỂ HIỂU LỚP 'NavbarItem' *@
@model HeaderViewModel

@* === BẮT ĐẦU SỬA ĐỔI: THÊM HÀM ĐỆ QUY ĐỂ VẼ MENU === *@
@helper RenderMenu(List<NavbarItem> allItems, int? parentId)
{
    // Tìm các mục con của cấp hiện tại
    var children = allItems.Where(i => i.ParentId == parentId).OrderBy(i => i.ItemOrder).ToList();

    if (children.Any())
    {
        // Nếu là menu con (cấp 2, 3...), dùng class 'dropdown-menu'
        if (parentId.HasValue)
        {
            <ul class="dropdown-menu" role="menu">
                @foreach (var item in children)
                {
                    // Kiểm tra xem mục con này có con nữa không
                    bool hasChildren = allItems.Any(i => i.ParentId == item.ItemId);
                    if (hasChildren)
                    {
                        <li class="dropdown-submenu">
                            <a href="@Url.Content(item.ItemUrl ?? "#")" class="dropdown-toggle" data-toggle="dropdown">@item.ItemText</a>
                            @RenderMenu(allItems, item.ItemId) @* Đệ quy: Vẽ menu cháu *@
                        </li>
                    }
                    else
                    {
                        <li><a href="@Url.Content(item.ItemUrl ?? "#")">@item.ItemText</a></li>
                    }
                }
            </ul>
        }
        // Nếu là menu cha (cấp 1), dùng class 'nav navbar-nav'
        else
        {
            <ul class="nav navbar-nav">
                @foreach (var item in children)
                {
                    bool hasChildren = allItems.Any(i => i.ParentId == item.ItemId);
                    if (hasChildren)
                    {
                        <li class="dropdown">
                            <a href="@Url.Content(item.ItemUrl ?? "#")" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
                                @item.ItemText <span class="caret"></span>
                            </a>
                            @RenderMenu(allItems, item.ItemId) @* Đệ quy: Vẽ menu con *@
                        </li>
                    }
                    else
                    {
                        <li><a href="@Url.Content(item.ItemUrl ?? "#")">@item.ItemText</a></li>
                    }
                }
            </ul>
        }
    }
}
@* === KẾT THÚC HÀM ĐỆ QUY === *@


<style>
    /* ... (CSS cũ của bạn cho avatar, brand... giữ nguyên) ... */
    .navbar-avatar {
        width: 30px;
        height: 30px;
        border-radius: 50%;
        object-fit: cover;
        margin-right: 8px;
        margin-top: -5px;
    }

    .navbar-brand-text {
        font-size: 24px;
        font-weight: 700;
        color: #333 !important;
        padding-top: 15px;
    }

    /* CSS MỚI CHO MENU ĐA CẤP */
    .dropdown-submenu {
        position: relative;
    }

        .dropdown-submenu > .dropdown-menu {
            top: 0;
            left: 100%;
            margin-top: -6px;
            margin-left: -1px;
        }

        .dropdown-submenu:hover > .dropdown-menu {
            display: block;
        }

        .dropdown-submenu > a:after {
            display: block;
            content: " ";
            float: right;
            width: 0;
            height: 0;
            border-color: transparent;
            border-style: solid;
            border-width: 5px 0 5px 5px;
            border-left-color: #ccc;
            margin-top: 5px;
            margin-right: -10px;
        }

        .dropdown-submenu:hover > a:after {
            border-left-color: #fff;
        }
</style>

<div class="navbar navbar-default navbar-static-top">
    <div class="container">
        <div class="navbar-header">

            @if (string.IsNullOrEmpty(Model.LogoUrl))
            {
                <a class="navbar-brand navbar-brand-text" href="@Url.Action("Index", "Home")">
                    Phone Store
                </a>
            }
            else
            {
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                    <img src="@Url.Content(Model.LogoUrl)" alt="Logo" height="40" style="display:inline-block; margin-top:-10px;">
                </a>
            }

            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse-main">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>

        <div class="collapse navbar-collapse" id="navbar-collapse-main">

            @* === BẮT ĐẦU SỬA ĐỔI: GỌI HÀM VẼ MENU === *@
            @* Xóa bỏ vòng lặp cũ *@
            @RenderMenu(Model.NavbarItems, null)
            @* === KẾT THÚC SỬA ĐỔI === *@

            @* Menu "Thương hiệu" (Category) - Chúng ta sẽ gộp nó vào NavbarItems sau nếu bạn muốn *@
            <ul class="nav navbar-nav">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Thương hiệu <span class="caret"></span></a>
                    <ul class="dropdown-menu" role="menu">
                        @if (Model.Categories != null)
                        {
                            foreach (var category in Model.Categories)
                            {
                                <li>@Html.ActionLink(category.Name, "ByCategory", "Product", new { id = category.CategoryId }, null)</li>
                            }
                        }
                    </ul>
                </li>
            </ul>

            <ul class="nav navbar-nav navbar-right">

                @if (Model.ShowSearchBar)
                {
                    <li>
                        @using (Html.BeginForm("Search", "Product", FormMethod.Get, new { @class = "navbar-form", @role = "search" }))
                        {
                            <div class="form-group">
                                <input type="text" name="keyword" class="form-control" placeholder="Tìm sản phẩm...">
                            </div>
                            <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-search"></span></button>
                        }
                    </li>
                }

                <li>@Html.ActionLink("Giỏ hàng", "Index", "Cart")</li>

                @if (Model.IsLoggedIn)
                {
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">

                            @if (!string.IsNullOrEmpty(Model.UserAvatarUrl))
                            {
                                <img src="@Url.Content(Model.UserAvatarUrl)" alt="Avatar" class="navbar-avatar" />
                            }
                            else
                            {
                                <span class="glyphicon glyphicon-user" style="margin-right: 5px;"></span>
                            }
                            @Model.WelcomeText
                            <strong>
                                @{
                                    string userType = Session["UserType"] as string;
                                    if ("vip".Equals(userType, StringComparison.OrdinalIgnoreCase))
                                    {
                                        <span>👑 </span>
                                    }
                                }
                                @Model.UserFirstName
                            </strong>
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Hồ sơ cá nhân", "Index", "Profile")</li>
                            <li>@Html.ActionLink("Lịch sử Đơn hàng", "History", "Order")</li>
                            @if (User.IsInRole("admin"))
                            {
                                <li class="divider"></li>
                                <li>@Html.ActionLink("Quản trị hệ thống", "Index", "Admin", new { area = "Admin" }, null)</li>
                            }
                            <li class="divider"></li>
                            <li>
                                @using (Html.BeginForm("Logout", "Login", new { area = "" }, FormMethod.Post, new { id = "logoutForm" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <a href="javascript:document.getElementById('logoutForm').submit()" style="padding-left: 20px;">Đăng xuất</a>
                                }
                            </li>
                        </ul>
                    </li>
                }
                else
                {
                    <li>@Html.ActionLink("Đăng nhập", "Index", "Login")</li>
                    <li>@Html.ActionLink("Đăng ký", "Register", "Login")</li>
                }
            </ul>
        </div>
    </div>
</div>