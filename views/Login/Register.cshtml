@model PhoneStore_New.Models.ViewModels.RegisterViewModel
@{
    ViewBag.Title = "Đăng ký tài khoản";
    Layout = null; // Full màn hình giống Login
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - Phone Store</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <style>
        /* === DÙNG CHUNG CSS VỚI TRANG LOGIN === */
        body {
            /* Lấy hình nền từ ViewBag giống hệt trang Login */
            background: url('@Url.Content(ViewBag.BackgroundUrl ?? "~/Content/images/autoimage.jpg")') no-repeat center center fixed;
            background-size: cover;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        .login-container {
            background: rgba(255, 255, 255, 0.95);
            padding: 30px 40px;
            border-radius: 10px;
            box-shadow: 0 10px 25px rgba(0,0,0,0.2);
            width: 100%;
            max-width: 450px; /* Rộng hơn xíu vì form dài */
        }
        .login-header { text-align: center; margin-bottom: 25px; }
        .login-header h2 { color: #333; font-weight: bold; margin-bottom: 5px; }
        .login-header p { color: #666; font-size: 14px; }

        .form-control { height: 45px; font-size: 15px; }

        /* Nút bấm màu đỏ đồng bộ */
        .btn-custom {
            background: #d0011b; border: none; font-size: 18px; font-weight: bold;
            padding: 10px; transition: 0.3s; width: 100%; color: white; border-radius: 5px;
            margin-top: 10px;
        }
        .btn-custom:hover { background: #b50015; color: white; }

        .auth-link { text-align: center; margin-top: 20px; font-size: 14px; }
        .auth-link a { color: #d0011b; font-weight: bold; text-decoration: none; }
        .auth-link a:hover { text-decoration: underline; }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="login-header">
            <h2>ĐĂNG KÝ</h2>
            <p>Tạo tài khoản để nhận nhiều ưu đãi</p>
        </div>

        @using (Html.BeginForm("Register", "Login", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger text-center", @style = "display:block; margin-bottom:15px;" })

            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control", @placeholder = "Tên đăng nhập", @required = "required" })
                </div>
                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @type = "email", @placeholder = "Email", @required = "required" })
                </div>
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Mật khẩu", @required = "required" })
                </div>
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-ok-circle"></i></span>
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Nhập lại mật khẩu", @required = "required" })
                </div>
                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
            </div>

            <button type="submit" class="btn btn-custom">ĐĂNG KÝ NGAY</button>
        }

        <div class="auth-link">
            Đã có tài khoản? <a href="@Url.Action("Index", "Login")">Đăng nhập ngay</a>
            <br /><br />
            <a href="@Url.Action("Index", "Home")" style="color: #666; font-weight: normal;">
                <i class="glyphicon glyphicon-arrow-left"></i> Quay lại trang chủ
            </a>
        </div>
    </div>
</body>
</html>