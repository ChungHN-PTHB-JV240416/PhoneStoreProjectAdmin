@{
    ViewBag.Title = "Quên mật khẩu";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - Phone Store</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background: url('@Url.Content(ViewBag.BackgroundUrl ?? "~/Content/images/autoimage.jpg")') no-repeat center center fixed;
            background-size: cover;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        .login-container {
            background: rgba(255, 255, 255, 0.95);
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 10px 25px rgba(0,0,0,0.2);
            width: 100%;
            max-width: 450px;
        }
        .login-header { text-align: center; margin-bottom: 25px; }
        .login-header h2 { color: #333; font-weight: bold; margin-bottom: 10px; }
        .login-header p { color: #666; font-size: 14px; }
        .form-control { height: 45px; font-size: 16px; }
        .btn-custom {
            background: #d0011b; border: none; font-size: 18px; font-weight: bold;
            padding: 10px; transition: 0.3s; width: 100%; color: white; border-radius: 5px;
            margin-top: 15px;
        }
        .btn-custom:hover { background: #b50015; color: white; }
        .back-link { text-align: center; margin-top: 20px; }
        .back-link a { color: #d0011b; font-weight: bold; }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="login-header">
            <h2>QUÊN MẬT KHẨU</h2>
            <p>Nhập email của bạn để lấy lại mật khẩu</p>
        </div>

        @if (ViewBag.Success != null)
        {
            <div class="alert alert-success text-center">
                <i class="glyphicon glyphicon-ok-sign"></i> @ViewBag.Success
            </div>
            <div class="text-center">
                <a href="@Url.Action("Index", "Login")" class="btn btn-custom">Quay lại Đăng nhập</a>
            </div>
        }
        else
        {
            using (Html.BeginForm("ForgotPassword", "Login", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger text-center">@ViewBag.Error</div>
                }

                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                        <input type="email" name="email" class="form-control" placeholder="Nhập địa chỉ Email của bạn" required />
                    </div>
                </div>

                <button type="submit" class="btn btn-custom">GỬI YÊU CẦU</button>
            }
        }

        <div class="back-link">
            <a href="@Url.Action("Index", "Login")"><i class="glyphicon glyphicon-arrow-left"></i> Quay lại Đăng nhập</a>
        </div>
    </div>
</body>
</html>